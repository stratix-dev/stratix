{
  "name": "@stratix/testing",
  "version": "0.8.2",
  "description": "Testing utilities for Stratix AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run || exit 0",
    "test:watch": "vitest"
  },
  "keywords": [
    "stratix",
    "ai",
    "agents",
    "testing",
    "mock"
  ],
  "dependencies": {
    "@stratix/runtime": "workspace:^",
    "@stratix/di": "workspace:^",
    "@stratix/core": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.7.2",
    "vitest": "^1.0.0"
  },
  "author": "P. Andr√©s Carvajal <causticrez@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix-dev/stratix.git",
    "directory": "packages/testing"
  },
  "homepage": "https://stratix-dev.github.io/stratix/",
  "bugs": {
    "url": "https://github.com/stratix-dev/stratix/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
