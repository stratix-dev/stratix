{
  "name": "@stratix/http-fastify",
  "version": "0.3.0",
  "description": "Fastify HTTP integration plugin for Stratix framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "stratix",
    "http",
    "fastify",
    "plugin",
    "rest",
    "api"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/stratix.git",
    "directory": "packages/http-fastify"
  },
  "dependencies": {
    "@stratix/runtime": "workspace:*",
    "fastify": "^5.2.0",
    "@fastify/cors": "^10.0.1",
    "@stratix/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
