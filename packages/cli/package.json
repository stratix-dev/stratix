{
  "name": "@stratix/cli",
  "version": "0.3.0",
  "description": "Global CLI for Stratix framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "stratix": "./bin/stratix.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern '**/*.test.ts' --ignore-pattern '**/__tests__/**'",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "keywords": [
    "stratix",
    "cli",
    "ddd",
    "hexagonal",
    "cqrs",
    "code-generator"
  ],
  "author": "P. Andr√©s Carvajal <causticrez@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0",
    "execa": "^8.0.1",
    "zod": "^3.22.4",
    "cosmiconfig": "^9.0.0",
    "@stratix/core": "workspace:*"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcarvajal/stratix.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/pcarvajal/stratix#readme",
  "bugs": {
    "url": "https://github.com/pcarvajal/stratix/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
