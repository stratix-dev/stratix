{
  "name": "@stratix/cli",
  "version": "0.4.4",
  "description": "Global CLI for Stratix framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "stratix": "./bin/stratix.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc && cp -r src/templates/* dist/templates/",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern '**/*.test.ts' --ignore-pattern '**/__tests__/**'",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "keywords": [
    "stratix",
    "cli",
    "ddd",
    "hexagonal",
    "cqrs",
    "code-generator"
  ],
  "author": "P. Andr√©s Carvajal <causticrez@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@stratix/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix-dev/stratix.git",
    "directory": "packages/cli"
  },
  "homepage": "https://stratix-dev.github.io/stratix/",
  "bugs": {
    "url": "https://github.com/stratix-dev/stratix/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
