{
  "name": "stratix-copilot-rag",
  "displayName": "Stratix Copilot",
  "description": "AI-powered coding assistant for Stratix framework with intelligent code generation",
  "version": "0.6.1",
  "publisher": "stratix",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "stratix",
    "ddd",
    "cqrs",
    "copilot",
    "ai",
    "rag"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix-dev/stratix.git",
    "directory": "packages/copilot-rag"
  },
  "bugs": {
    "url": "https://github.com/stratix-dev/stratix/issues"
  },
  "homepage": "https://github.com/stratix-dev/stratix/tree/main/packages/copilot-rag#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "stratix.assistant",
        "name": "stratix",
        "description": "Stratix DDD/CQRS expert assistant with RAG-powered knowledge base",
        "isSticky": true,
        "commands": [
          {
            "name": "entity",
            "description": "Generate a domain entity"
          },
          {
            "name": "command",
            "description": "Generate a CQRS command with handler"
          },
          {
            "name": "query",
            "description": "Generate a CQRS query with handler"
          },
          {
            "name": "vo",
            "description": "Generate a value object"
          },
          {
            "name": "repository",
            "description": "Generate a repository interface"
          },
          {
            "name": "context",
            "description": "Generate a complete bounded context"
          },
          {
            "name": "refactor",
            "description": "Suggest DDD/CQRS refactorings"
          },
          {
            "name": "explain",
            "description": "Explain Stratix patterns and concepts"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "stratix.openChat",
        "title": "Stratix: Open AI Assistant"
      },
      {
        "command": "stratix.rebuildKnowledge",
        "title": "Stratix: Rebuild Knowledge Base"
      },
      {
        "command": "stratix.showKnowledgeBaseInfo",
        "title": "Stratix: Show Knowledge Base Info"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node build.mjs",
    "watch": "node build.mjs --watch",
    "package": "node build.mjs --production",
    "check-types": "tsc --noEmit",
    "copy:json": "mkdir -p dist/rag && cp src/rag/initial-knowledge.json dist/rag/ 2>/dev/null || true",
    "build:knowledge": "tsx knowledge-base/build-knowledge.ts",
    "test": "vitest",
    "vsce:package": "vsce package"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "dependencies": {
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^3.21.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.19.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}