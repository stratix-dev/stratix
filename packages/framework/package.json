{
  "name": "@stratix/framework",
  "version": "2.0.0-beta.1",
  "description": "Stratix framework - Decorator-based DDD framework with CQRS, Event Sourcing, and AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern '**/*.test.ts' --ignore-pattern '**/__tests__/**'",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "framework",
    "ddd",
    "domain-driven-design",
    "cqrs",
    "event-sourcing",
    "hexagonal-architecture",
    "decorators",
    "typescript",
    "dependency-injection",
    "ai-agents"
  ],
  "author": "P. Andr√©s Carvajal <causticrez@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@stratix/core": "workspace:^",
    "awilix": "^12.0.5",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "eslint": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix-dev/stratix.git",
    "directory": "packages/framework"
  },
  "homepage": "https://stratix-dev.github.io/stratix/",
  "bugs": {
    "url": "https://github.com/stratix-dev/stratix/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
