{
  "name": "@stratix/config",
  "version": "0.8.2",
  "description": "Configuration providers for Stratix (env, file, composite)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./env": {
      "import": "./dist/env/index.js",
      "types": "./dist/env/index.d.ts"
    },
    "./file": {
      "import": "./dist/file/index.js",
      "types": "./dist/file/index.d.ts"
    },
    "./composite": {
      "import": "./dist/composite/index.js",
      "types": "./dist/composite/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ignore-pattern '**/*.test.ts' --ignore-pattern '**/__tests__/**'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "stratix",
    "configuration",
    "config",
    "environment",
    "env",
    "file",
    "yaml",
    "json",
    "composite"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix-dev/stratix.git",
    "directory": "packages/providers/config"
  },
  "dependencies": {
    "@stratix/core": "workspace:^",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://stratix-dev.github.io/stratix/"
}
