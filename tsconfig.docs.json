{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/*/src/**/*",
    "packages/ai/providers/*/src/**/*",
    "packages/providers/config/src/**/*",
    "packages/providers/di/*/src/**/*",
    "packages/providers/validation/*/src/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules",
    "**/dist"
  ]
}
